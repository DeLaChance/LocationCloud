<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="lvalstar" id="create-user-table">
        <createTable tableName="user" schemaName="public">

            <column name="id" type="varchar(64)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="keyWords" type="text" />

        </createTable>
    </changeSet>

    <changeSet author="lvalstar" id="create-path-table">
        <createTable tableName="path" schemaName="public">

            <column name="id" type="varchar(64)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="userid" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="timestamp" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="double">
                <constraints nullable="false"/>
            </column>

            <addForeignKeyConstraint baseColumnNames="userid" baseTableName="user" constraintName="fk_user_path_id"
                referencedColumnNames="id" referencedTableName="user"/>


        </createTable>
    </changeSet>

</databaseChangeLog>